  "workflow_test_data": {
    "phase_transitions": [
      {
        "from_phase": "Submission",
        "to_phase": "Estimation",
        "required_roles": ["Job Coordinator", "Project Manager", "System Manager"],
        "required_fields": ["customer_name", "project_name", "job_type", "start_date", "description"],
        "validation_rules": ["validate_basic_info", "check_customer_credit"]
      },
      {
        "from_phase": "Estimation", 
        "to_phase": "Client Approval",
        "required_roles": ["Estimator", "Project Manager", "System Manager"],
        "required_fields": ["scope_of_work", "material_requisitions", "labor_entries"],
        "validation_rules": ["validate_estimates", "check_material_availability"]
      },
      {
        "from_phase": "Client Approval",
        "to_phase": "Planning",
        "required_roles": ["Client", "Sales Manager", "Project Manager", "System Manager"],
        "required_fields": ["total_material_cost", "total_labor_cost"],
        "validation_rules": ["validate_client_approval", "check_contract_terms"],
        "escalation_timeout_days": 7,
        "escalation_roles": ["Sales Manager", "Project Manager"]
      },
      {
        "from_phase": "Planning",
        "to_phase": "Prework", 
        "required_roles": ["Project Manager", "Resource Coordinator", "System Manager"],
        "required_fields": ["team_members", "start_date", "end_date"],
        "validation_rules": ["validate_resource_availability", "check_schedule_conflicts"]
      },
      {
        "from_phase": "Prework",
        "to_phase": "Execution",
        "required_roles": ["Project Manager", "Site Supervisor", "System Manager"],
        "required_fields": ["material_requisitions", "team_members"],
        "validation_rules": ["validate_material_orders", "check_permits", "verify_equipment_availability"]
      },
      {
        "from_phase": "Execution",
        "to_phase": "Review",
        "required_roles": ["Site Supervisor", "Technician", "Project Manager", "System Manager"],
        "required_fields": ["labor_entries"],
        "validation_rules": ["validate_work_completion", "check_quality_standards"]
      },
      {
        "from_phase": "Review",
        "to_phase": "Invoicing",
        "required_roles": ["Quality Inspector", "Project Manager", "System Manager"], 
        "required_fields": ["total_labor_hours", "total_material_cost"],
        "validation_rules": ["validate_quality_standards", "client_sign_off"]
      },
      {
        "from_phase": "Invoicing",
        "to_phase": "Closeout",
        "required_roles": ["Billing Clerk", "Accountant", "Project Manager", "System Manager"],
        "required_fields": ["total_material_cost", "total_labor_cost"],
        "validation_rules": ["validate_billing_amounts", "check_payment_terms"]
      },
      {
        "from_phase": "Closeout",
        "to_phase": "Archived",
        "required_roles": ["Project Manager", "Document Controller", "System Manager"],
        "required_fields": ["documents", "total_labor_hours", "total_material_cost", "total_labor_cost"],
        "validation_rules": ["validate_documentation", "confirm_payment_received"]
      }
    ],

    "backward_transitions": [
      {"from_phase": "Estimation", "to_phase": "Submission", "reason": "Insufficient information"},
      {"from_phase": "Client Approval", "to_phase": "Estimation", "reason": "Estimate revision required"},
